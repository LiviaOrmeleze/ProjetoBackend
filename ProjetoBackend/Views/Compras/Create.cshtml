@model ProjetoBackend.Models.Compra

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">

    <h1 class="Titulos">Adicionar Compra</h1>

    <div class="col-10 col-md mt-4">
    </div>
    <form asp-action="Create">
        <div class="row">
            <div class="col-12 col-md-4 mt-2 Titulos">
                <div class="form-group">
                    <label asp-for="FornecedorId" class="control-label"></label>
                    <select asp-for="FornecedorId" class="form-control" asp-items="ViewBag.FornecedorId"></select>
                </div>
            </div>
            <div class="col-12 col-md-4 mt-2 Titulos">
                <div class="form-group">
                    <label asp-for="DataCompra" class="control-label"></label>
                    <input asp-for="DataCompra" class="form-control" />
                    <span asp-validation-for="DataCompra" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12 col-md-4 mt-2 Titulos">
                <div class="form-group">
                    <label asp-for="ValorTotal" class="control-label"></label>
                    <input asp-for="ValorTotal" class="form-control" />
                    <span asp-validation-for="ValorTotal" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col col-md-1 mt-4">
                <div class="form-group">
                    <input type="submit" value="Criar" class="btn btnSalVol" />
                </div>
            </div>

            <div class="col-10 col-md mt-4">
            </div>

            <div class="col col-md-4 mt-4">
                <a class="btn btnSalVol" asp-action="Index">Voltar</a>
            </div>
        </div>
    </form>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
