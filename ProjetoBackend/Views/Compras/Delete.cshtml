@model ProjetoBackend.Models.Compra

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5 justify-content-center">

    <h2 class="Titulos">Deseja excluir essa compra?</h2>
    <div>

        <div class="col-10 col-md mt-4">
        </div>

        <dl class="row">
            <dt class="col-sm-2  Titulos">
                @Html.DisplayNameFor(model => model.Fornecedor)
            </dt>
            <dd class="col-sm-10 Titulos">
                @Html.DisplayFor(model => model.Fornecedor.Celular)
            </dd>
            <dt class="col-sm-2  Titulos">
                @Html.DisplayNameFor(model => model.DataCompra)
            </dt>
            <dd class="col-sm-10  Titulos">
                @Html.DisplayFor(model => model.DataCompra)
            </dd>
            <dt class="col-sm-2 Titulos">
                @Html.DisplayNameFor(model => model.ValorTotal)
            </dt>
            <dd class="col-sm-10 Titulos">
                @Html.DisplayFor(model => model.ValorTotal)
            </dd>
        </dl>

        <div class="row">

            <div class="col col-md-4 mt-4">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="CompraId" />
                    <input type="submit" value="Delete" class="btn btnSalVol" />
                </form>
            </div>
            <div class="col-10 col-md mt-4">
            </div>
            <div class="col col-md-4 mt-4">
                <a class="btn btnSalVol " asp-action="Index">Voltar</a>
            </div>

        </div>

    </div>
