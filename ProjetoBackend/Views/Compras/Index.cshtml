@model IEnumerable<ProjetoBackend.Models.Compra>

@{
    ViewData["Title"] = "Index";
}

<div class="container">

    <h1 class="Titulos">Compras</h1>

    <form asp-action="Search" method="get">
        <input type="text" name="nome" class="col" placeholder="Buscar cliente por nome..." />
        <button type="submit" class="icone"><ion-icon name="search"></ion-icon></button>
    </form>

    <p>
        <a asp-action="Create" class="btn btn-lg btn-primary btnAdicionar mt-3"><ion-icon name="person-add-outline"></ion-icon>  Adicionar Cliente</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Fornecedor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataCompra)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ValorTotal)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fornecedor.Celular)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataCompra)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ValorTotal)
                    </td>
                    <td>
                        <a asp-action="Edit" class="btn btnEdd" asp-route-id="@item.CompraId">Editar</a>
                        <a asp-action="Details" class="btn btnEdd" asp-route-id="@item.CompraId">Detalhes</a>
                        <a asp-action="Delete" class="btn btnEdd" asp-route-id="@item.CompraId">Deletar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>