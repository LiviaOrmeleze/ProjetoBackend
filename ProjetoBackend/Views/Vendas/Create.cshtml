@model ProjetoBackend.Models.Venda

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">

    <h1 class="Titulos">Adicionar Venda</h1>

    <div class="col-10 col-md mt-4">
    </div>
    <form asp-action="Create">
        <div class="row">
            <div class="col-10 col-md-6 mt-4 Titulos">
                <div class="form-group">
                    <input type="hidden" asp-for="NotaFiscal" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="ClienteId" class="control-label"></label>
                    <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId"></select>
                </div>
            </div>

            <div class="col-10 col-md-6 mt-4 Titulos">
                <div class="form-group">
                    <input type="hidden" asp-for="DataVenda" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="ValorTotal" class="control-label"></label>
                    <input asp-for="ValorTotal" readonly="readonly" value="0.00" class="form-control" />
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col col-md-1 mt-4">
                <div class="form-group">
                    <input type="submit" value="Criar" class="btn btnSalVol" />
                </div>
            </div>

            <div class="col-10 col-md mt-4">
            </div>

            <div class="col col-md-4 mt-4">
                <a class="btn btnSalVol" asp-action="Index">Voltar</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }
}
