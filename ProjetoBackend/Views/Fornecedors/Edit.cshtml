@model ProjetoBackend.Models.Fornecedor

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">

    <h2 class="titulos">Editar Fornecedores</h2>

    <div class="col-10 col-md mt-4">
    </div>

    <div class="row">
        <div class="col-12 col-md-6 mt-2 Titulos">
            <input type="hidden" asp-for="FornecedorId" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
        </div>

        <div class="col-12 col-md-6 mt-2 Titulos">
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12 col-md-5 mt-2 Titulos">
            <div class="form-group">
                <label asp-for="Celular" class="control-label"></label>
                <input asp-for="Celular" class="form-control" />
                <span asp-validation-for="Celular" class="text-danger"></span>
            </div>
        </div>
        <div class="col-12 col-md-7 mt-2 Titulos">
            <div class="form-group">
                <label asp-for="CnpjCpf" class="control-label"></label>
                <input asp-for="CnpjCpf" class="form-control" />
                <span asp-validation-for="CnpjCpf" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col col-md-4 mt-4">
            <a class="btn btnSalVol" asp-action="Index">Voltar</a>
        </div>
        <div class="col-10 col-md mt-4">
        </div>
        <div class="col col-md-1 mt-4">
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btnSalVol" />
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
