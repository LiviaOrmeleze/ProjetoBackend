@model IEnumerable<ProjetoBackend.Models.ItemVenda>

@{
    ViewData["Title"] = "Index";
    var idVendaAtual = ViewData["idVendaAtual"];
}


<div class="container">

    <h1 class="Titulos">Itens de Venda</h1>
    <div class="col-10 col-md mt-4">
    </div>
    <form asp-action="Search" method="get">
        <input type="text" name="nome" style="border:2px solid #AB886D; border-radius:7px; background:#E4E0E1; " class="col p-2" placeholder="Buscar item por nome..." />
        <button type="submit" class="icone"><ion-icon name="search"></ion-icon></button>
    </form>

    <p>
        <a asp-action="Create" asp-route-id="@idVendaAtual" class="btn btn-lg btn-primary btnAdicionar mt-3"><ion-icon name="person-add-outline"></ion-icon>  Adicionar Produto</a>
    </p>
    <table class="w-100" style="background:#D6C0B3!important;color:#493628;">
        <thead style="background:#D6C0B3!important;border:1px solid #AB886D;">
            <tr>
                @* <th class="p-2">
                @Html.DisplayNameFor(model => model.Venda)
                </th> *@
                <th class="p-2">
                    @Html.DisplayNameFor(model => model.Produto)
                </th>
                <th class="p-2">
                    @Html.DisplayNameFor(model => model.Quantidade)
                </th>
                <th class="p-2">
                    Valor Unitário
                </th>
                <th class="p-2">
                    @Html.DisplayNameFor(model => model.ValorTotal)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody style="border:1px solid #AB886D">
            @foreach (var item in Model)
            {
                <tr>
                    @*  <td class="p-2">
                @Html.DisplayFor(modelItem => item.Venda.VendaId)
                </td> *@
                    <td class="p-2">
                        @Html.DisplayFor(modelItem => item.Produto.Nome)
                    </td>
                    <td class="p-2">
                        @Html.DisplayFor(modelItem => item.Quantidade)
                    </td>
                    <td class="p-2">
                        @String.Format("R$ {0:N2}", item.ValorUnitario)
                    </td>
                    <td class="p-2">
                        @String.Format("R$ {0:N2}", (item.ValorUnitario * item.Quantidade))
                    </td>
                    <td>
                        <a asp-action="Edit" class="btn btnEdd" asp-route-id="@item.ItemVendaId">Editar</a>
                        <a asp-action="Details" class="btn btnEdd" asp-route-id="@item.ItemVendaId">Detalhes</a>
                        <a asp-action="Delete" class="btn btnEdd" asp-route-id="@item.ItemVendaId">Deletar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>