@model ProjetoBackend.Models.ItemVenda

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">


    <h2 class="Titulos">Editar item da venda</h2>


    <div class="col-10 col-md mt-4">
    </div>

    <form asp-action="Edit">
        <div class="row">
            <div class="col-12 col-md-7 mt-2 Titulos">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ItemVendaId" />
                <div class="form-group">
                    <label asp-for="VendaId" class="control-label"></label>
                    <select asp-for="VendaId" class="form-control" asp-items="ViewBag.VendaId"></select>
                    <span asp-validation-for="VendaId" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12 col-md-5 mt-2 Titulos">
                <div class="form-group">
                    <label asp-for="ProdutoId" class="control-label"></label>
                    <select asp-for="ProdutoId" class="form-control" asp-items="ViewBag.ProdutoId"></select>
                    <span asp-validation-for="ProdutoId" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class=" col-12 col-md-4 mt-2 Titulos">

                <div class="form-group">
                    <label asp-for="Quantidade" class="control-label"></label>
                    <input asp-for="Quantidade" class="form-control" />
                    <span asp-validation-for="Quantidade" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12 col-md-4 mt-2 Titulos">

                <div class="form-group">
                    <label asp-for="ValorUnitario" class="control-label"></label>
                    <input asp-for="ValorUnitario" class="form-control" />
                    <span asp-validation-for="ValorUnitario" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12 col-md-4 mt-2 Titulos">

                <div class="form-group">
                    <label asp-for="ValorTotal" class="control-label"></label>
                    <input asp-for="ValorTotal" class="form-control" />
                    <span asp-validation-for="ValorTotal" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col col-md-4 mt-4">

                    <a class="btn btnSalVol" asp-controller="ItensVendas" asp-action="Index" asp-route-id="@Model.VendaId">Voltar</a>
                </div>
                <div class="col-10 col-md mt-4">
                </div>
                <div class="col col-md-1 mt-4">
                    <div class="form-group">
                        <input type="submit" value="Salvar" class="btn btnSalVol" />
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
