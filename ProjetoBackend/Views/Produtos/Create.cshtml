@model ProjetoBackend.Models.Produto

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">

    <h1 class="Titulos">Adicionar Produto </h1>

    <div class="col-10 col-md mt-4">
    </div>
    <form asp-action="Create">
        <div class="row">
            <div class="col-12 col-md-7 mt-2 Titulos">
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12 col-md-5 mt-2 Titulos">
                <div class="form-group">
                    <label asp-for="Preco" class="control-label"></label>
                    <input type="number" step="0.01" asp-for="Preco" class="form-control" />
                    <span asp-validation-for="Preco" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12 col-md-5 mt-2 Titulos">
                <div class="form-group">
                    <label asp-for="Estoque" class="control-label"></label>
                    <input asp-for="Estoque" class="form-control" />
                    <span asp-validation-for="Estoque" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12 col-md-7 mt-2 Titulos">
                <div class="form-group">
                    <label asp-for="CategoriaId" class="control-label"></label>
                    <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId"></select>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col col-md-1 mt-4">
                <div class="form-group">
                    <input type="submit" value="Criar" class="btn btnSalVol" />
                </div>
            </div>

            <div class="col-10 col-md mt-4">
            </div>

            <div class="col col-md-4 mt-4">
                <a class="btn btnSalVol" asp-action="Index">Voltar</a>
            </div>
        </div>
    </form>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
