@model ProjetoBackend.Models.Produto

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">

    <h2 class="Titulos">Detalhes do Produto</h2>

    <div>
        <div class="col-10 col-md mt-4">
        </div>

        <dl class="row">
            <dt class="col-sm-2 Titulos">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10 Titulos ">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-2 Titulos">
                @Html.DisplayNameFor(model => model.Preco)
            </dt>
            <dd class="col-sm-10 Titulos">
                @Html.DisplayFor(model => model.Preco)
            </dd>
            <dt class="col-sm-2 Titulos">
                @Html.DisplayNameFor(model => model.Estoque)
            </dt>
            <dd class="col-sm-10 Titulos">
                @Html.DisplayFor(model => model.Estoque)
            </dd>
            <dt class="col-sm-2 Titulos">
                @Html.DisplayNameFor(model => model.Categoria)
            </dt>
            <dd class="col-sm-10 Titulos">
                @Html.DisplayFor(model => model.Categoria.Nome)
            </dd>
        </dl>
    </div>
    <div class="row">
        <div class="col col-md-4 mt-4">
            <a class="btn btnSalVol " asp-action="Index">Voltar</a>
        </div>
        <div class="col-10 col-md mt-4">
        </div>
        <div class="col col-md-1 mt-4">
            <a class="btn btnSalVol" asp-action="Edit" asp-route-id="@Model?.ProdutoId">Editar</a>
        </div>
    </div>
</div>