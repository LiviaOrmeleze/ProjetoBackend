@model ProjetoBackend.Models.Cliente

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">

    <h2 class="Titulos">Deseja excluir esse cliente?</h2>
    <div>

        <div class="col-10 col-md mt-4">
        </div>

        <dl class="row">
            <dt class="col-sm-2 Titulos">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10 Titulos">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-2 Titulos">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10 Titulos">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-2 Titulos">
                @Html.DisplayNameFor(model => model.CnpjCpf)
            </dt>
            <dd class="col-sm-10 Titulos">
                @Html.DisplayFor(model => model.CnpjCpf)
            </dd>
            <dt class="col-sm-2 Titulos">
                @Html.DisplayNameFor(model => model.Celular)
            </dt>
            <dd class="col-sm-10 Titulos">
                @Html.DisplayFor(model => model.Celular)
            </dd>
            <dt class="col-sm-2 Titulos">
                @Html.DisplayNameFor(model => model.DataNascimento)
            </dt>
            <dd class="col-sm-10 Titulos">
                @Html.DisplayFor(model => model.DataNascimento)
            </dd>
            <dt class="col-sm-2 Titulos">
                @Html.DisplayNameFor(model => model.DataCadastro)
            </dt>
            <dd class="col-sm-10 Titulos">
                @Html.DisplayFor(model => model.DataCadastro)
            </dd>
            <dt class="col-sm-2 Titulos">
                @Html.DisplayNameFor(model => model.CadastroAtivo)
            </dt>
            <dd class="col-sm-10 Titulos">
                @Html.DisplayFor(model => model.CadastroAtivo)
            </dd>
        </dl>
        <div class="row">

            <div class="col col-md-4 mt-4">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="ClienteId" />
                    <input type="submit" value="Delete" class="btn btnSalVol" />
                </form>
            </div>
            <div class="col-10 col-md mt-4">
            </div>
            <div class="col col-md-4 mt-4">
                <a class="btn btnSalVol " asp-action="Index">Voltar</a>
            </div>

        </div>
    </div>

</div>