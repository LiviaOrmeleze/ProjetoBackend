@model ProjetoBackend.Models.Cliente

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">

    <h2 class="Titulos">Detalhes do Cliente</h2>

    <div>
        <div class="col-10 col-md mt-4">
        </div>

        <dl class="row">
            <dt class="col-sm-2 Titulos">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10 Titulos">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-2 Titulos">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10 Titulos">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-2 Titulos">
                @Html.DisplayNameFor(model => model.CnpjCpf)
            </dt>
            <dd class="col-sm-10 Titulos">
                @Html.DisplayFor(model => model.CnpjCpf)
            </dd>
            <dt class="col-sm-2 Titulos">
                @Html.DisplayNameFor(model => model.Celular)
            </dt>
            <dd class="col-sm-10 Titulos">
                @Html.DisplayFor(model => model.Celular)
            </dd>
            <dt class="col-sm-2 Titulos">
                @Html.DisplayNameFor(model => model.DataNascimento)
            </dt>
            <dd class="col-sm-10 Titulos">
                @Html.DisplayFor(model => model.DataNascimento)
            </dd>
            <dt class="col-sm-2 Titulos">
                @Html.DisplayNameFor(model => model.DataCadastro)
            </dt>
            <dd class="col-sm-10 Titulos">
                @Html.DisplayFor(model => model.DataCadastro)
            </dd>
            <dt class="col-sm-2 Titulos">
                @Html.DisplayNameFor(model => model.CadastroAtivo)
            </dt>
            <dd class="col-sm-10 Titulos">
                @Html.DisplayFor(model => model.CadastroAtivo)
            </dd>
        </dl>
    </div>
    <div class="row">
        <div class="col col-md-4 mt-4">
            <a class="btn btnSalVol " asp-action="Index">Voltar</a>
        </div>
        <div class="col-10 col-md mt-4">
        </div>
        <div class="col col-md-1 mt-4">
            <a class="btn btnSalVol" asp-action="Edit" asp-route-id="@Model?.ClienteId">Editar</a>
        </div>
    </div>

</div>