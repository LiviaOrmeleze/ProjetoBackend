@model ProjetoBackend.Models.Cliente

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">

    <h1 class="Titulos">Adicionar Cliente</h1>

    <div class="col-10 col-md mt-4">
    </div>

    <form asp-action="Create">
        <div class="row">
            <div class="col-12 col-md-6 mt-2 Titulos">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
            </div>

            <div class="col-12 col-md-6 mt-2  Titulos">
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">

            <div class="col-12 col-md-4 mt-2  Titulos">
                <div class="form-group">
                    <label asp-for="CnpjCpf" class="control-label"></label>
                    <input id="cpf" asp-for="CnpjCpf" class="form-control" />
                    <span asp-validation-for="CnpjCpf" class="text-danger"></span>
                </div>
            </div>

            <div class="col-12 col-md-4 mt-2 Titulos">
                <div class="form-group">
                    <label asp-for="Celular" class="control-label"></label>
                    <input id="celular" asp-for="Celular" class="form-control" />
                    <span asp-validation-for="Celular" class="text-danger"></span>
                </div>
            </div>


            <div class="col-12 col-md-4 mt-2  Titulos">
                <div class="form-group">
                    <label asp-for="DataNascimento" class="control-label"></label>
                    <input type="date" asp-for="DataNascimento" class="form-control" />
                    <span asp-validation-for="DataNascimento" class="text-danger"></span>
                </div>
            </div>

        </div>

        <div class="form-group  Titulos">


            <input type="hidden" asp-for="DataCadastro" class="form-control" />

        </div>
        <div class="form-group  Titulos">

            <input type="hidden" asp-for="CadastroAtivo" class="form-control" />

        </div>

        <div class="row">
            <div class="col col-md-1 mt-4">
                <div class="form-group">
                    <input type="submit" value="Criar" class="btn btnSalVol" />
                </div>
            </div>

            <div class="col-10 col-md mt-4">
            </div>

            <div class="col col-md-4 mt-4">
                <a class="btn btnSalVol" asp-action="Index">Voltar</a>
            </div>
        </div>
    </form>

</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const celInput = document.getElementById("celular");

        celInput.addEventListener("input", function () {
            let value = celInput.value.replace(/\D/g, ""); // Remove caracteres não numéricos

            // Aplica a máscara no formato (99) 99999-9999
            value = value.replace(/^(\d{2})(\d)/, "($1) $2");
            value = value.replace(/(\d{5})(\d)/, "$1-$2");

            celInput.value = value;
        });
    });
</script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const cpfInput = document.getElementById("cpf");

        cpfInput.addEventListener("input", function () {
            let value = cpfInput.value.replace(/\D/g, ""); // Remove caracteres não numéricos

            // Aplica a máscara no formato 999.999.999-99
            value = value.replace(/(\d{3})(\d)/, "$1.$2");
            value = value.replace(/(\d{3})(\d)/, "$1.$2");
            value = value.replace(/(\d{3})(\d{1,2})$/, "$1-$2");

            cpfInput.value = value;
        });
    });
</script>