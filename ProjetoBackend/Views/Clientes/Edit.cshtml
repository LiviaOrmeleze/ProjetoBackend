@model ProjetoBackend.Models.Cliente

@{
    ViewData["Title"] = "Edit";
}
<div class="container mt-5 d-md-block d-flex flex-column align-items-center justify-content-center">


    <h2 class="Titulos mb-3">Editar Clientes</h2>

    <form asp-action="Edit" class="row d-flalign-text-bottom justify-content-center">
        <div class="row">
            <div class="col-12 col-md-6 mt-2 Titulos">
                <input type="hidden" asp-for="ClienteId" />
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
            </div>

            <div class="col-12 col-md-6 mt-2 Titulos">
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

            </div>
        </div>

        <div class="row">
            <div class="col-12 col-md-4 mt-2 Titulos">
                <div class="form-group">
                    <label asp-for="CnpjCpf" class="control-label"></label>
                    <input asp-for="CnpjCpf" class="form-control" />
                    <span asp-validation-for="CnpjCpf" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12 col-md-4 mt-2 Titulos">
                <div class="form-group">
                    <label asp-for="Celular" class="control-label"></label>
                    <input asp-for="Celular" class="form-control" />
                    <span asp-validation-for="Celular" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12 col-md-4 mt-2 Titulos">
                <div class="form-group">
                    <label asp-for="DataNascimento" class="control-label"></label>
                    <input asp-for="DataNascimento" class="form-control" />
                    <span asp-validation-for="DataNascimento" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12 col-md-9 mt-2 Titulos">
                <div class="form-group">
                    <label asp-for="DataCadastro" class="control-label"></label>
                    <input asp-for="DataCadastro" class="form-control" />
                    <span asp-validation-for="DataCadastro" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12 col-md-3 mt-2 Titulos">
                <div class="form-group">
                    <label asp-for="CadastroAtivo" class="control-label"></label>
                    <input asp-for="CadastroAtivo" class="form-control" />
                    <span asp-validation-for="CadastroAtivo" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row justify-content-around justify-content-md-between pb-4">
            <div class="col-6 col-md-6 mt-4">
                <a class="btn btnSalVol" asp-action="Index">Voltar</a>
            </div>

            <div class="col-4 col-md-6 mt-4 d-md-flex justify-content-end">
                <input type="submit" value="Salvar" class="btn btnSalVol" />
            </div>
        </div>
    </form>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
