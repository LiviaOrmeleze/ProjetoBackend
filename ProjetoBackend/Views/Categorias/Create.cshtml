@model ProjetoBackend.Models.Categoria

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">

    <h1 class="Titulos">Adicionar Categorias </h1>

    <div class="col-10 col-md mt-4">
    </div>

    <div class="row">
        <div class="col-md-6 Titulos">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col col-md-1 mt-4">
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btnSalVol" />
            </div>
        </div>

        <div class="col-10 col-md mt-4">
        </div>

        <div class="col col-md-1 mt-4">
            <a class="btn btnSalVol" asp-action="Index">Voltar</a>
        </div>
    </div>

</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
