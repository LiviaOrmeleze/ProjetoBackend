<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Nuvem de algodão</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjetoBackend.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@100..900&display=swap" rel="stylesheet">
</head>
<body style="background-color: #E4E0E1; font-family: 'Outfit', sans-serif;">
    <header>
        <div class="header-container">
            <nav class="navbar navbar-expand-sm  border-bottom box-shadow pt-48px" style="background-color: #AB886D">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/img/nuvem.png" alt="Logo Nuvem de Algodão" width="120" height="50" class="d-inline-block align-text-top">
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link" style="text-background-color: #493628" asp-area="" asp-controller="Home" asp-action="Index">Pagina Inicial</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" style="text-background-color: #493628" asp-area="" asp-controller="Home" asp-action="Sobre">Sobre Nós</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" style="text-background-color: #493628" asp-area="" asp-controller="Clientes" asp-action="Index">Clientes</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" style="text-background-color: #493628" asp-area="" asp-controller="Fornecedors" asp-action="Index">Fornecedores</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" style="text-background-color: #493628" asp-area="" asp-controller="Categorias" asp-action="Index">Categorias de Produtos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" style="text-background-color: #493628" asp-area="" asp-controller="Produtos" asp-action="Index">Produtos</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link " style="text-background-color: #493628" asp-area="" asp-controller="Vendas" asp-action="Index">Vendas</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link " style="text-background-color: #493628" asp-area="" asp-controller="Compras" asp-action="Index">Compras</a>
                            </li>


                        </ul>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </nav>
        </div>
    </header>
    <div class="">
        <main role="main" class="">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="background-color: #AB886D">
        <div class="container text-center text-light fs-1">
            Nuvem de algodão
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/ionicons/ionicons.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
